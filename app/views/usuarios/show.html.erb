 <!-- Row start -->
 <div class="row">
  <div class="col-lg-6">
    <div class="widget">
      <div class="widget-header">
        <div class="title">
          <span class="text-error">Usuário</span>
        </div>
      </div>
      <div class="widget-body">
        <table class="table table-striped table-hover">
          <tbody>
            <tr>
              <td>
                <strong>Login:</strong>
              </td>
              <td>
                <%= @usuario.login %>
              </td>
            </tr>  
            <tr>
              <td>
                <strong>Nome:</strong>
              </td>
              <td>
                <%= @usuario.nome %>
              </td>
            </tr> 
            <tr>
              <td>
                <strong>Sobrenome:</strong>
              </td>
              <td>
                <%= @usuario.sobrenome %>
              </td>
            </tr> 
            <tr>
              <td>
                <strong>Permissão:</strong>
              </td>
              <td>
                <%= @usuario.permissao %>
              </td>
            </tr>            
          </tbody>
        </table>
      </div>
    </div>
  </div>  

</div>
<%= link_to t('botoes.voltar'), "javascript:history.go(-1)", class: 'btn btn-info'%>
 <!-- Row end -->
