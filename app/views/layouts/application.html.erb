<!DOCTYPE html>
<html>
<head>

	<meta charset="utf-8">
	<meta name="description" content="Sistema de entrada de dados do laboratório Nugap">
	<meta name="author" content="Christiane M. Okamoto e Luiz Fernando M. Carvalho">
	<title>Nugap</title>

	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= stylesheet_link_tag 'smoothness/jquery-ui-1.10.4.custom' %>
	<%= javascript_include_tag "application" %>		
	<%= csrf_meta_tags %>
	<script type="text/javascript">  
    $(document).ready(function () {  
        $('.dropdown-toggle').dropdown();  
    });  
    </script>
	<script src="/assets/jquery.maskMoney.min.js" type="text/javascript"></script>
	 <script type="text/javascript" src="/assets/firsttime.js"></script>
</head>

<body>

	<% if valida_id_sessao %>

		<!-- MENU PRINCIPAL -->	
		<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
		<div class="container">

			

			<div class="nav-collapse collapse">
				<ul class="nav">

				<div class="btn-group">
					<%= link_to 'Amostras', amostras_path, :class => 'btn btn-default' %>
					  
					  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
					    <span class="caret"></span>
					    <span class="sr-only"></span>
					  </button>
					  <ul class="dropdown-menu" role="menu">
					  	<li><%= link_to 'Análises', tipo_analises_path %></li>
					  	<li><%= link_to 'Assinaturas', assinaturas_path %></li>
					  	<li><%= link_to 'Embalagens', embalagems_path %></li>
					    <li><%= link_to 'Empresas', empresas_path %></li>
					    <li><%= link_to 'Parâmetros', parametros_path %></li>
					    <li><%= link_to 'Produtos', produtos_path %></li>					
					  </ul>
				</div>

				<div class="btn-group">
					<%= link_to 'Orçamentos', orcamentos_path, :class => 'btn btn-default' %>
					  <% if user_is_administrador? %>
						  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
						    <span class="caret"></span>
						    <span class="sr-only"></span>
						  </button>
						  <ul class="dropdown-menu" role="menu">					    
							<li><%= link_to 'Preço Serviços', preco_servicos_path %></li>	
						  </ul>
					  <% end %>	
				</div>

				<% if user_is_administrador? %>
					<div class="btn-group">
						<%= link_to 'Cadastro de Usuários', usuarios_path, :class => 'btn btn-default' %>	
					</div>
				<% end %>	

							
					<div class='logado'>
						<% usuario = Usuario.find(session[:id]) %>
						<% if user_is_administrador? %>
	            			Logado como <%= usuario.login %> (Administrador)
	           			<% end %>
	            		<% if user_is_tecnico? %>
	                		Logado como <%= usuario.login %> (Técnico)
	            		<% end %>
	            		<% if user_is_estagiario? %>
	                		Logado como <%= usuario.login %> (Estagiário)
	            		<% end %>
       				 </div>
					<span class="logout"><%= link_to 'Logout', logout_path, :class => 'logout' %></span>
				</li>
				<!--li class="logout"><button class="btn btn-info" type="submit">Logout</li-->
				</ul>
			</div>
		</div>
		</div>
		</div>
		<div class="margem-padrao-nugap">				    		
	    		<%= yield %>
		</div>

	    

		<%else%>

			<div class="container">
		   		<%= yield %>
		  	</div>

		<%end%>


		  

		  


  </body>
</html>
