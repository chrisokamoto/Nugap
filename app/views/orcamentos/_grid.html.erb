<div class="row">
  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <div class="title">
          
        </div>
      </div>

      <div class="widget-body">
        <%= grid(@servico_orcamento_grid, html:{class: 'table table-condensed table-striped table-hover table-bordered'}, show_filters: :when_filtered) do |g|

          g.column name: t(:produto), attribute: 'produto'
          g.column name: "Análise", attribute: 'analise'
          g.column name: "Parâmetro", attribute: 'parametro'
          g.column name: t(:qtd_amostra), attribute: 'qtd_amostra'
          g.column name: "Valor Unitário", attribute: 'valor_unitario'
          g.column name: t(:valor_total), attribute: 'valor_total'

          g.column name: "Editar" do |servico_orcamento|
              link_to content_tag(:p, content_tag(:i, nil, class: "fa fa-pencil-square-o fa-2x", id: "editar_servico_orcamento"), class: "text-warning icon_edit expose"), '#', onclick:"edit_servico_orcamento(#{servico_orcamento.id});", id: "editar-#{servico_orcamento.id}"
            end            

            g.column name: "Apagar" do |servico_orcamento|
              link_to content_tag(:p, content_tag(:i, nil, class: "fa fa-trash-o fa-2x", id: "deletar_servico_orcamento"), class: "delete-row text-muted icon_delete expose"), '#', onclick:"delete_servico_orcamento(#{servico_orcamento.id});", id: "deletar-#{servico_orcamento.id}"
            end

        end -%>
      </div>
    </div>
  </div>
</div>