<legend>Orçamentos cadastrados</legend>

<table cellpadding="0" cellspacing="0" border="1" class="table-striped table-bordered" id="tabela" width="95%">
  <thead>
    <tr>
      <th width="20%" style="word-wrap:break-word;"><center>Identificador</center></th>
      <th width="20%" style="word-wrap:break-word;"><center>Pessoa Solicitante</center></th>
      <th width="20%" style="word-wrap:break-word;"><center>Empresa Solicitante</center></th>
      <th width="20%" style="word-wrap:break-word;"><center>Total à Pagar (R$)</center></th>      
      <th width="20%" style="word-wrap:break-word;"><center>Status</center></th>      
      <th width="5%" style="word-wrap:break-word;"><center></center></th>
      <th width="5%" style="word-wrap:break-word;"><center></center></th>
      <% if user_is_administrador? %>
        <th width="5%" style="word-wrap:break-word;"><center></center></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @orcamentos.each do |orcamento| %>
      <tr>
        <td><center><%= orcamento.numero %></center></td>
        <td><center><%= orcamento.pessoa_solicitante %></center></td>
        <td><center><%= orcamento.empresa_solicitante %></center></td>
        <td><center><%= orcamento.total_pagar %></center></td>
        <td><center><%= orcamento.status %></center></td>        
        <td><center><%= link_to 'Detalhes', orcamento, :class => 'btn btn-small' %></center> </td>        
        <td width="5%" style="word-wrap:break-word;"><center><%= link_to 'Editar', edit_orcamento_path(orcamento), :class => 'btn btn-small' %></center></td>
        <% if user_is_administrador? %>
          <td style="word-wrap:break-word;"><%= link_to 'Excluir', orcamento, method: :delete, :class => 'btn btn-small', data: { confirm: "Você realmente deseja excluir o orcamento #{orcamento.numero}?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Orçamento', new_orcamento_path, :class => 'btn btn-info' %>


<footer>
      <div class="footerNugap">
        <br><br>
        <center>
          <img src="../../assets/images/logo.png" alt="Nugap" width="50" height="50">
          <i>Nugap - Todos os direitos reservados</i>
        </center>
      </div>
    </footer>
