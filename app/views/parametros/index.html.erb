<br /><br /><br /><br />
<legend>Parâmetros cadastrados</legend>

<div style="width:95%; margin-left:3%;">

<% if !user_is_administrador? %>
  
    <%= grid(@parametros_grid, html: {class:'grid'}, :show_filters => :always, allow_showing_all_records: false) do |g|
  

      g.column :name => 'Nome', html: {style: 'text-align: center'}, :attribute => 'nome'

      g.column :name => 'Referência', html: {style: 'text-align: center'}, :attribute => 'referencia' 

      g.column :name => 'Método', html: {style: 'text-align: center'}, :attribute => 'metodo' 

      g.column :name => 'Valor de Referência', html: {style: 'text-align: center'}, :attribute => 'valor_referencia' 

      g.column do |parametro|
        link_to('Editar', edit_parametro_path(parametro), html: {style: 'text-align: center'}, :class => 'btn btn-small')
      end

    end -%>

<%end%>

<% if user_is_administrador? %>

<%= grid(@parametros_grid, html: {class:'grid'}, :show_filters => :always, allow_showing_all_records: false) do |g|
  

      g.column :name => 'Nome', html: {style: 'text-align: center'}, :attribute => 'nome'

      g.column :name => 'Referência', html: {style: 'text-align: center'}, :attribute => 'referencia' 

      g.column :name => 'Método', html: {style: 'text-align: center'}, :attribute => 'metodo' 

      g.column :name => 'Valor de Referência', html: {style: 'text-align: center'}, :attribute => 'valor_referencia' 

      g.column do |parametro|
        link_to('Editar', edit_parametro_path(parametro), html: {style: 'text-align: center'}, :class => 'btn btn-small')
      end

      g.column do |parametro|
        link_to 'Excluir', parametro, method: :delete, html: {style: 'text-align: center'}, :class => 'btn btn-small', data: { confirm: "Você realmente deseja excluir o parametro #{parametro.nome}?" } 
      end

    end -%>

<%end%>

</div>

<br>

<%= link_to 'Novo Parâmetro', new_parametro_path, :class => 'btn btn-info' %>


