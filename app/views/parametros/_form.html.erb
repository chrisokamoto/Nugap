<div class="row">
  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <div class="title">
          <span class="fs1" aria-hidden="true"></span>
            <%if(controller.action_name == 'index' || controller.action_name=='new' || controller.action_name == 'create')%>
              <%= "Cadastrar Parâmetro" %>
            <%else%>
              <%= "Editar Parâmetro" %>
            <%end%>
        </div>
      </div>
      <div class="widget-body">

          <%if(controller.action_name == 'index' || controller.action_name=='new' || controller.action_name == 'create' || controller.action_name == 'edit')%>

            <%= form_for(@parametro, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
              <%= render partial: 'layouts/forms/error', locals: {modelo: @parametro} %>
              
              <div class="form-group">
                <%= f.label :nome, class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :nome, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "Referência", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_area :referencia, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "Método", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_area :metodo, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "Valor de Referência", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :valor_referencia, class: 'form-control' %>
                </div>
              </div>
 
              <div class="form-group">
                  <div class="col-lg-offset-3 col-lg-9">
                    <div class="col-lg-6">
                      <%= f.submit "Salvar", class: 'btn btn-success btn-block' %>
                    </div>
                    <div class="col-lg-6">
                      <%= link_to parametros_path do %>
                        <button type="button" class="btn btn-secondary btn-block"> <%= "Limpar" %> </button>
                      <%end%>
                    </div>
                </div>
              </div>

            <% end %>

          <% end %>

        </div>
    </div>
  </div>
</div>
