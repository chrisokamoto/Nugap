
<div class="row">
  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <div class="title">
          <span class="fs1" aria-hidden="true"></span>
            <%if(controller.action_name == 'index' || controller.action_name=='new' || controller.action_name == 'create')%>
              <%= "Cadastrar Empresa" %>
            <%else%>
              <%= "Editar Empresa" %>
            <%end%>
        </div>
      </div>
      <div class="widget-body">

          <%if(controller.action_name == 'index' || controller.action_name=='new' || controller.action_name == 'create' || controller.action_name == 'edit')%> 

            <%= form_for(@empresa,  html: {class: 'form-horizontal', role: 'form'}) do |f| %>
              <%= render partial: 'layouts/forms/error', locals: {modelo: @empresa} %>

              <div class="form-group">
                <%= f.label :nome, class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :nome, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "EndereÃ§o", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :rua, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :bairro, class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :bairro, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :cidade, class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :cidade, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "UF", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :UF, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "CEP", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :CEP, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "CNPJ", class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :CNPJ, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :telefone, class: 'col-lg-3 control-label' %>
                <div class="col-lg-9">
                  <%= f.text_field :telefone, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
              <div class="col-lg-offset-3 col-lg-9">
                <div class="col-lg-6">
                  <%= f.submit "Salvar", class: 'btn btn-success btn-block' %>
                </div>
                <div class="col-lg-6">
                  <%= link_to empresas_path do %>
                    <button type="button" class="btn btn-secondary btn-block"> <%= "Limpar" %> </button>
                  <%end%>
                </div>
            </div>
          </div>
          <% end %>

        <% end %>

        </div>
    </div>
  </div>
</div>

